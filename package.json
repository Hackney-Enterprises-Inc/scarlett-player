{
  "name": "scarlett-player-workspace",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Scarlett Player - Modular, plugin-based video player",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hackney-Enterprises-Inc/scarlett-player.git"
  },
  "bugs": {
    "url": "https://github.com/Hackney-Enterprises-Inc/scarlett-player/issues"
  },
  "homepage": "https://github.com/Hackney-Enterprises-Inc/scarlett-player#readme",
  "author": "The Stream Platform",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "packages/plugins/*",
    "packages/presets/*"
  ],
  "scripts": {
    "build": "pnpm --filter '@scarlett-player/core' run build && pnpm --filter './packages/**' --filter '!@scarlett-player/core' run build",
    "dev": "pnpm --filter '@scarlett-player/core' run dev",
    "test": "pnpm --filter './packages/**' run test",
    "test:watch": "pnpm --filter './packages/**' run test:watch",
    "typecheck": "pnpm --filter './packages/**' run typecheck",
    "lint": "eslint packages --ext .ts,.tsx",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,json,md}\"",
    "clean": "pnpm --filter './packages/**' run clean && rm -rf node_modules",
    "validate": "pnpm run lint && pnpm run typecheck && pnpm run test && pnpm run build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@10.25.0"
}
