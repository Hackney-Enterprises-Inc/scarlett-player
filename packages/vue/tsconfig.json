{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "jsx": "preserve",
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@scarlett-player/core": ["../core/dist/index.d.ts"],
      "@scarlett-player/core/*": ["../core/dist/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
