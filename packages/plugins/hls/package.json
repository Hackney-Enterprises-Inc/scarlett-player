{
  "name": "@scarlett-player/hls",
  "version": "0.2.2",
  "description": "HLS Provider Plugin for Scarlett Player",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./light": {
      "types": "./dist/light.d.ts",
      "import": "./dist/light.js",
      "require": "./dist/light.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/light.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts src/light.ts --format esm,cjs --dts --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "peerDependencies": {
    "@scarlett-player/core": "^0.2.2",
    "hls.js": "^1.4.0"
  },
  "peerDependenciesMeta": {
    "hls.js": {
      "optional": true
    }
  },
  "devDependencies": {
    "@scarlett-player/core": "workspace:*",
    "hls.js": "^1.5.0",
    "typescript": "^5.3.0",
    "tsup": "^8.0.0",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "jsdom": "^24.0.0"
  },
  "keywords": [
    "video",
    "player",
    "hls",
    "streaming",
    "scarlett"
  ],
  "author": "The Stream Platform",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hackney-Enterprises-Inc/scarlett-player.git",
    "directory": "packages/plugins/hls"
  },
  "bugs": {
    "url": "https://github.com/Hackney-Enterprises-Inc/scarlett-player/issues"
  },
  "homepage": "https://scarlettplayer.com"
}
