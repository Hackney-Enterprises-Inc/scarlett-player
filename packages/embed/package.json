{
  "name": "@scarlett-player/embed",
  "version": "0.1.1",
  "description": "Standalone CDN-ready embed package for Scarlett Player",
  "type": "module",
  "main": "./dist/embed.umd.cjs",
  "module": "./dist/embed.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/embed.js",
      "require": "./dist/embed.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "iframe.html"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "keywords": [
    "video",
    "player",
    "embed",
    "cdn",
    "hls",
    "streaming",
    "scarlett"
  ],
  "author": "The Stream Platform",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hackney-Enterprises-Inc/scarlett-player.git",
    "directory": "packages/embed"
  },
  "bugs": {
    "url": "https://github.com/Hackney-Enterprises-Inc/scarlett-player/issues"
  },
  "homepage": "https://scarlettplayer.com",
  "dependencies": {
    "@scarlett-player/core": "workspace:*",
    "@scarlett-player/hls": "workspace:*",
    "@scarlett-player/ui": "workspace:*",
    "hls.js": "^1.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/ui": "^1.1.0",
    "jsdom": "^23.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.1.0"
  }
}
